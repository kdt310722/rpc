{
    "name": "@kdt310722/rpc",
    "type": "module",
    "version": "0.2.1",
    "packageManager": "pnpm@10.12.1",
    "description": "RPC websocket client and server implements for NodeJS application",
    "author": "Diep Dang <kdt310722@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/kdt310722/rpc",
    "repository": "github:kdt310722/rpc",
    "bugs": {
        "email": "kdt310722@gmail.com",
        "url": "https://github.com/kdt310722/rpc/issues"
    },
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=22.16.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rimraf dist && tsup && tsc --project ./tsconfig.build.json",
        "release": "tsx scripts/release.ts && changelogen gh release && pnpm publish",
        "up": "ncu -i",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "preinstall": "npx only-allow pnpm",
        "prepare": "simple-git-hooks",
        "prepublishOnly": "pnpm build"
    },
    "dependencies": {
        "@kdt310722/utils": "^0.0.19",
        "ws": "^8.18.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@kdt310722/eslint-config": "^0.2.0",
        "@kdt310722/tsconfig": "^1.0.0",
        "@swc/core": "^1.12.1",
        "@types/node": "^22.15.31",
        "@types/ws": "^8.18.1",
        "changelogen": "^0.6.1",
        "eslint": "^9.29.0",
        "execa": "^9.6.0",
        "lint-staged": "^16.1.2",
        "npm-check-updates": "^18.0.1",
        "only-allow": "^1.2.1",
        "rimraf": "^6.0.1",
        "simple-git-hooks": "^2.13.0",
        "tsup": "^8.5.0",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3"
    },
    "commitlint": {
        "extends": "@commitlint/config-conventional"
    },
    "simple-git-hooks": {
        "commit-msg": "npx --no -- commitlint --edit ${1}",
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
